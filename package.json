{
  "name": "flashcast_evaluation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "pnpm": ">=8.15.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "cd apps/portal && npx dotenv -e .env.local -e .env.development -e .env -- pnpm test",
    "dev": "pnpm --filter portal dev",
    "build": "pnpm --filter portal build",
    "start": "pnpm --filter portal start",
    "docker:up": "docker compose -f ./deploy/docker-compose.yml up",
    "dev:docker:up": "docker compose -f ./deploy/docker-compose.yml up pgsql redis",
    "docker:down": "docker compose -f ./deploy/docker-compose.yml down",
    "prisma": "pnpm --filter db prisma",
    "db:deploy": "pnpm --filter db prisma migrate deploy",
    "db:generate": "pnpm --filter db prisma generate",
    "db:format": "pnpm --filter db prisma format",
    "newmigrate": "pnpm --filter db prisma:newMigrate",
    "db:migrate:up": "pnpm --filter db prisma migrate deploy",
    "db:migrate": "pnpm --filter db prisma migrate dev --name update",
    "db:update": "pnpm db:migrate && pnpm db:generate && pnpm db:format",
    "postinstallx": "pnpm db:generate",
    "build:nextapp": "docker compose -f ./deploy/docker-compose.yml build nextapp"
  },
